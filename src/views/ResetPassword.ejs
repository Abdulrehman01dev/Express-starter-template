<!-- views/resetPassword.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Reset Password</title>
  <script>
    window.onload = function() {
      const form = document.getElementById('resetForm');
      form.onsubmit = function(e) {
        const password = document.getElementById('password').value;
        const passwordConfirm = document.getElementById('passwordConfirm').value;
        if (password !== passwordConfirm) {
          e.preventDefault();
          alert('Passwords do not match');
        }
      };
    };
  </script>
  <style>
    input {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
    
    #submit-button {
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    
    #submit-button:hover {
      background-color: #45a049;
    }
    
    .password-form {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
    }
    </style>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
   
</head>
<body>
  <div class="row justify-content-center">
    <div  class="password-form col-sm-10 col-md-5 col-xl-3 col-lg-4 ">

      <form id="resetForm" action="/api/auth/resetPassword" method="POST">
        <input type="hidden" name="token" value="<%= token %>" />
        <label for="pass">Password</label>
        <input type="password" id="pass" name="password" placeholder="New Password">
        <label for="pass2">Confirm Password</label>
        <input type="password" id="pass2" name="password-confirm" placeholder="Confirm new password">
    <div class="d-flex justify-content-center">

      <button type="submit" id="submit-button">Reset Password</button>
    </div>
      </form>
    </div>
  </div>

</body>
</html>






